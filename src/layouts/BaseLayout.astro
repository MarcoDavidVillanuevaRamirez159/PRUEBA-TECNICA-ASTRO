---
import "../styles/global.css";

interface Props {
    title?: string;
    description?: string;
}

const {
    title = 'Sales Insights',
    description = 'Dashboard de ventas'
} = Astro.props as Props;
---

<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen bg-slate-950 text-slate-100">
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <header class="py-4 md:py-8 border-b border-slate-800">
        <div class="flex flex-col gap-4">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                <div>
                    <h1 class="text-xl md:text-2xl font-bold text-slate-100">Sales Insights</h1>
                    <p class="text-sm md:text-base text-slate-400 mt-1">Anal√≠tica de ventas</p>
                </div>
            </div>

            <nav class="overflow-x-auto">
                <div class="flex gap-2 min-w-max">
                    <a
                        href="/"
                        class="flex-shrink-0 px-3 md:px-4 py-2 text-sm font-medium rounded-lg transition-colors"
                        class:list={[
                            Astro.url.pathname === '/' || Astro.url.pathname.startsWith('/item/') || Astro.url.pathname.startsWith('/compare')
                                ? 'bg-blue-600 text-white'
                                : 'text-slate-400 hover:text-slate-300 hover:bg-slate-800'
                        ]}
                    >
                        Productos
                    </a>
                    <a
                        href="/stores"
                        class="flex-shrink-0 px-3 md:px-4 py-2 text-sm font-medium rounded-lg transition-colors"
                        class:list={[
                            Astro.url.pathname === '/stores'
                                ? 'bg-emerald-600 text-white'
                                : 'text-slate-400 hover:text-slate-300 hover:bg-slate-800'
                        ]}
                    >
                        Sucursales
                    </a>
                </div>
            </nav>
        </div>
    </header>

    <main class="py-4 md:py-8">
        <slot />
    </main>

    <footer class="py-4 md:py-6 border-t border-slate-800">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 md:gap-4">
            <p class="text-xs md:text-sm text-slate-500">Sales Insights</p>
            <a
                href="/analytics"
                class="text-xs md:text-sm text-slate-400 hover:text-slate-300 transition-colors"
            >
                Analytics
            </a>
        </div>
    </footer>
</div>
</body>
</html>
